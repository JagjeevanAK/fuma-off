{
  "extends": [
    "next/core-web-vitals"
  ],
  "root": true,
  "env": {
    "node": true,
    "browser": true,
    "es6": true
  },
  "rules": {
    "prefer-const": "error",
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "react/no-unescaped-entities": "off"
  },
  "ignorePatterns": [
    "node_modules/",
    ".next/",
    "out/",
    "dist/",
    "build/",
    "coverage/",
    "*.config.js",
    "*.config.mjs"
  ]
}
